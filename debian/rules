#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
#DH_VERBOSE = 1

# see EXAMPLES in dpkg-buildflags(1) and read /usr/share/dpkg/*
DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

# see FEATURE AREAS in dpkg-buildflags(1)
#export DEB_BUILD_MAINT_OPTIONS = hardening=+all

# see ENVIRONMENT in dpkg-buildflags(1)
# package maintainers to append CFLAGS
#export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
# package maintainers to append LDFLAGS
#export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed


# main packaging script based on dh7 syntax
%:
	dh $@ 

# debmake generated override targets
# This is example for Cmake (See http://bugs.debian.org/641051 )
#override_dh_auto_configure:
#	dh_auto_configure -- \
#	-DCMAKE_LIBRARY_PATH=$(DEB_HOST_MULTIARCH)


override_dh_auto_clean:
	rm -rf php-token-stream
	rm -f phpcs
	rm -f phpcbf
	rm -f php-cs-fixer
	rm -f phpcpd
	rm -f phpunit-skelgen
	rm -f phar-composer
	dh_auto_clean

override_dh_auto_build:
	curl -OL https://squizlabs.github.io/PHP_CodeSniffer/phpcs.phar
	mv phpcs.phar phpcs
	chmod +x phpcs
	curl -OL https://squizlabs.github.io/PHP_CodeSniffer/phpcbf.phar
	mv phpcbf.phar phpcbf
	chmod +x phpcbf
	git clone https://github.com/sebastianbergmann/php-token-stream.git
	wget http://get.sensiolabs.org/php-cs-fixer.phar -O php-cs-fixer
	chmod +x php-cs-fixer        
	wget https://phar.phpunit.de/phpcpd.phar
	chmod +x phpcpd.phar
	mv phpcpd.phar phpcpd
	wget https://phar.phpunit.de/phpunit-skelgen.phar
	chmod +x phpunit-skelgen.phar
	mv phpunit-skelgen.phar phpunit-skelgen
        wget https://github.com/clue/phar-composer/releases/download/v1.0.0/phar-composer.phar
	chmod +x phar-composer.phar
	mv phar-composer.phar phar-composer
	dh_auto_build



 